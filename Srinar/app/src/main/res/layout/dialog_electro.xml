<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#66000000"
    android:gravity="center"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/back_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/_20sdp">



            <TextView
                android:id="@+id/partname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electroplating"
                android:textColor="@color/green"
                android:textSize="@dimen/_16sdp" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#f8f8FF"
            android:orientation="vertical">


            <EditText
                android:id="@+id/qty_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolr"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:hint="Enter Quantity for Approval"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white" />


            <TextView
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@null"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="number"
                android:text="Approver's Passcode"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>





        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:gravity="center"
            android:background="@drawable/white_border"
            android:orientation="vertical">



            <EditText
                android:id="@+id/edt_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter 4 digit Passcode"
                android:textColorHint="#FF0000"
                android:textColor="@color/white"
                android:singleLine="true"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:imeOptions="actionDone"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:background="@null"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll4"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/approve_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/approve_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/green_check"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@drawable/curve_btnbg"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Approve"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>