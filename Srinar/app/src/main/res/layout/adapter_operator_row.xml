<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/soft_grey_choose"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7.5"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sno_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S.No"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/operatorid_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employee Id"
                android:gravity="center"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/machine_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operator"
                android:gravity="center"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dept_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dept"
                android:gravity="center"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/del_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:gravity="right"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/curve_btnbg_red"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>