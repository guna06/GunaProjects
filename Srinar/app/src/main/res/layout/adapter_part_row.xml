<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7.7"
        android:layout_marginLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">



            <TextView
                android:id="@+id/sno_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S.No"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/partid_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Part Id"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mainpart_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Part"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/subpart_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub Part"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/initial_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initial Qty"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/multifactor_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dec_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


          <TextView
              android:id="@+id/edit_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/red_edit"/>
        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textcolr"/>

</LinearLayout>