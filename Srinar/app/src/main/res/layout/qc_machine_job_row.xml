<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/soft_grey_choose"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="13.3"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/qcstate_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/cal_view"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/part_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Part"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/subpart_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/drescription_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B.No"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/partmonth_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Month"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/completed_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/approved_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pending_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unchecked"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/initialqty_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/status_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>