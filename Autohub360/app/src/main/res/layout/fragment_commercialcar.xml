<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_back"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_weight="1"
        android:orientation="vertical">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linear_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                <TextView
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/orange_vert"
                    android:text="Add Company"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold"/>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/company_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Enter Company Name"
                        android:imeOptions="actionNext"
                        android:maxLength="17"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey">

                    </View>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_company_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/company_mail_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Company Email"
                        android:imeOptions="actionNext"
                        android:maxLength="17"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey">

                    </View>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_company_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/company_phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Company Phone"
                        android:imeOptions="actionNext"
                        android:maxLength="17"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey">

                    </View>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_company_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/company_address1_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Address 1"
                        android:imeOptions="actionNext"
                        android:maxLength="17"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey">

                    </View>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_company_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/company_address2_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Address 2"
                        android:imeOptions="actionNext"
                        android:maxLength="17"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey">

                    </View>
                </android.support.design.widget.TextInputLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/select_city_spn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginLeft="-10dp">

                    </Spinner>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey">
                    </View>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_contact_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/_5sdp">

                        <EditText
                            android:id="@+id/contact_name_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Contact Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="#000000"
                            android:textSize="@dimen/_15sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/grey">

                        </View>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_contact_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp">

                        <EditText
                            android:id="@+id/contact_phone_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Contact Phone"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="#000000"
                            android:textSize="@dimen/_15sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/grey">

                        </View>
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>





                </LinearLayout>










                <LinearLayout
                    android:id="@+id/linear_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/orange_vert"
                        android:text="Add Commercial Car"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/textcolor"
                        android:textStyle="bold"/>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_vin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5sdp">

                            <EditText
                                android:id="@+id/vin_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Enter VIN#"
                                android:imeOptions="actionNext"
                                android:maxLength="17"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:textColor="#000000"
                                android:textSize="@dimen/_13sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/grey">

                            </View>
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/trucktype_spn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-10dp"
                            android:layout_marginLeft="-10dp">

                        </Spinner>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey">
                        </View>
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/year_spn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-10dp"
                                android:layout_marginLeft="-10dp">

                            </Spinner>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey">
                            </View>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/make_spn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-10dp"
                                android:layout_marginLeft="-10dp">

                            </Spinner>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey">
                            </View>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/model_spn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-10dp"
                                android:layout_marginLeft="-10dp">

                            </Spinner>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey">
                            </View>
                        </LinearLayout>







                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_mileage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5sdp">

                            <EditText
                                android:id="@+id/mileage_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Car Mileage"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingTop="@dimen/_5sdp"
                                android:textColor="#000000"
                                android:textSize="@dimen/_13sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/grey">

                            </View>
                        </android.support.design.widget.TextInputLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/orange_vert"
                            android:text="Add Car Image"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/textcolor"
                            android:textStyle="bold"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:background="@drawable/camera_box"
                                >

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <ImageView
                                        android:id="@+id/image1_iv"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layerType="software"
                                        android:scaleType="fitXY" />

                                    <ImageView
                                        android:id="@+id/upload1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload_icon" />
                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:background="@drawable/camera_box"
                                android:layout_marginLeft="@dimen/_15sdp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <ImageView
                                        android:id="@+id/image2_iv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layerType="software"
                                        android:scaleType="fitXY" />

                                    <ImageView
                                        android:id="@+id/upload2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/upload_icon" />

                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </ScrollView>





    </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/layout_submit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp">




            <TextView
                android:id="@+id/submit_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/login_icon"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:text="Add Commercial Car"
                android:textStyle="bold"
                android:textColor="@color/blackcolor"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_submit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/btn_bg">




            <TextView
                android:id="@+id/submit_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:drawableLeft="@drawable/login_icon"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/submit"
                android:textColor="@color/background_white_color"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>