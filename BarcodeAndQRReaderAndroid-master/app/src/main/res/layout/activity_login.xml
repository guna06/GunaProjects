<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/circle_round_bg">


                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/login" />

            </LinearLayout>




            <TextView
                android:id="@+id/sidehead1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/login_sidehead"
                android:textColor="@color/textBoldColor"
                android:textSize="@dimen/_19sdp" />


            <TextView
                android:id="@+id/sidehead2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/lighttextcolor"
                android:textSize="@dimen/_11sdp"
                android:text="Please enter the below details to login!!"/>

        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/top"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_above="@+id/bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_17sdp" />


            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_17sdp"
                android:gravity="center"
                android:background="@drawable/edittext_bg"/>




            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_bg"
                android:textColor="#FFFFFF"/>
        </LinearLayout>


    </LinearLayout>


    </RelativeLayout>










    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp">


            <TextView
                android:id="@+id/termsConditionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/lighttextcolor"
                android:text="@string/terms"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/termsConditionTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Created by"
                    android:textColor="@color/lighttextcolor"
                    android:textSize="@dimen/_10sdp" />



                <TextView
                    android:id="@+id/termsConditionTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"
                    android:text="SQIndia Pvt Ltd."/>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>