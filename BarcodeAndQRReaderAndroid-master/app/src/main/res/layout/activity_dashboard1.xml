<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#252934"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentTop="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/logout"/>
            </LinearLayout>







        <TextView
            android:id="@+id/sidehead1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="SQIndia Inventory Management"
            android:textColor="@color/textWhiteColor"
            android:textSize="@dimen/_19sdp" />



        <TextView
            android:id="@+id/sidehead2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ensure all the Products are"
            android:textColor="@color/lighttextcolor"
            android:textSize="@dimen/_14sdp" />




        <TextView
            android:id="@+id/sidehead3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Scanned and proceed"
            android:textColor="@color/lighttextcolor"
            android:textSize="@dimen/_14sdp" />



        <TextView
            android:id="@+id/sidehead4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="through this app!"
            android:textColor="@color/lighttextcolor"
            android:textSize="@dimen/_14sdp" />


        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bottom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">



                    <LinearLayout
                        android:id="@+id/profile_lnr"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/circle_round_bg_light">


                        <ImageView
                            android:id="@+id/profile_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_color"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="@color/lighttextcolor"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/report_lnr"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/circle_round_bg_light">

                        <ImageView
                            android:id="@+id/report_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/report_color" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/stockstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Receive Stock"
                        android:textColor="@color/lighttextcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

            </LinearLayout>
















        </LinearLayout>


    </RelativeLayout>










    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">



        <LinearLayout
            android:id="@+id/scan_lnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_50sdp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/fingerprint"/>



            <TextView
                android:id="@+id/pressscan_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/textWhiteColor"
                android:text="Press for Scanning"/>




            <TextView
                android:id="@+id/quickreview_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/quick"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/scan_lnr"
            android:layout_marginBottom="@dimen/_5sdp">


            <TextView
                android:id="@+id/termsConditionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/lighttextcolor"
                android:text="@string/terms"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/termsConditionTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Created by"
                    android:textColor="@color/lighttextcolor"
                    android:textSize="@dimen/_10sdp" />



                <TextView
                    android:id="@+id/termsConditionTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"
                    android:text="SQIndia Pvt Ltd."/>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>