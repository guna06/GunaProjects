<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/head_lr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:weightSum="7"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="@dimen/_10sdp"
              android:background="@drawable/arrow_white"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head_titletv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/background_white_color"
                android:text="Upload Car Parts"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@+id/head_lr"
        android:layout_above="@+id/bottom">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/date_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:singleLine="false"
                            android:textColorHint="@color/hintcolor"
                            android:imeOptions="actionDone"
                            android:hint="Select Date"
                            android:textSize="@dimen/_16sdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/hintcolor"/>


                    <Spinner
                        android:id="@+id/caryear_spn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-20dp"
                        android:autofillHints="Select Year"/>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="-15dp"
                        android:background="@color/hintcolor"/>


                    <Spinner
                        android:id="@+id/carmake_spn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:autofillHints="Select Year"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="-15dp"
                        android:background="@color/hintcolor"/>


                    <Spinner
                        android:id="@+id/carmodel_spn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:autofillHints="Select Year"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="-15dp"
                        android:background="@color/hintcolor"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:weightSum="2">


                        <EditText
                            android:id="@+id/mileage_edt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:maxLength="6"
                            android:imeOptions="actionDone"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/hintcolor"
                            android:inputType="number"
                            android:textSize="@dimen/_16sdp"
                            android:hint="@string/mileage"/>

                        <EditText
                            android:id="@+id/price_edt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/hintcolor"
                            android:inputType="number"
                            android:textSize="@dimen/_16sdp"
                            android:hint="@string/price"/>

                    </LinearLayout>



                    <EditText
                        android:id="@+id/carlocation_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:inputType="textCapSentences"
                        android:textColor="@color/textcolor"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="@dimen/_16sdp"
                        android:hint="Enter Location"/>










                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:weightSum="2">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/orange_stand"
                                android:text="Upload Car Pic"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/textcolor"
                                android:textStyle="bold"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <FrameLayout
                                        android:id="@+id/whole_car_pic1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginBottom="@dimen/_5sdp">


                                        <ImageView
                                            android:id="@+id/car_img1_iv"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layerType="software"
                                            android:scaleType="fitXY"
                                            android:background="@drawable/camera_box"/>

                                        <ImageView
                                            android:id="@+id/car_img1_plus_iv"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/add_btn" />


                                        <CheckBox
                                            android:id="@+id/chk_car1"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:button="@drawable/checkbox_bg"
                                            android:scaleType="fitEnd" />

                                    </FrameLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <FrameLayout
                                        android:id="@+id/whole_car_pic2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginBottom="@dimen/_5sdp">

                                        <ImageView
                                            android:id="@+id/car_img2_iv"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layerType="software"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/camera_box" />

                                        <ImageView
                                            android:id="@+id/car_img2_plus_iv"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/add_btn" />


                                        <CheckBox
                                            android:id="@+id/chk_car2"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:button="@drawable/checkbox_bg"
                                            android:scaleType="fitEnd" />
                                    </FrameLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/orange_stand"
                                android:text="Upload Vin Pic"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"
                                />





                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">


                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginBottom="@dimen/_5sdp">



                                        <ImageView
                                            android:id="@+id/vin_img1_iv"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layerType="software"
                                            android:scaleType="fitXY"
                                            android:background="@drawable/camera_box"/>

                                        <ImageView
                                            android:id="@+id/vin_img1_plus_iv"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/add_btn" />


                                        <CheckBox
                                            android:id="@+id/chk_vin1"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:button="@drawable/checkbox_bg"
                                            android:scaleType="fitEnd" />
                                    </FrameLayout>
                                </LinearLayout>




                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">


                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginBottom="@dimen/_5sdp">

                                        <ImageView
                                            android:id="@+id/vin_img2_iv"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layerType="software"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/camera_box" />

                                        <ImageView
                                            android:id="@+id/vin_img2_plus_iv"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/add_btn" />

                                        <CheckBox
                                            android:id="@+id/chk_vin2"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:button="@drawable/checkbox_bg"
                                            android:scaleType="fitEnd" />
                                    </FrameLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorPrimary"
                        android:text="(Or)"/>







                        <EditText
                            android:id="@+id/vinno_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                            android:textSize="@dimen/_15sdp"
                            android:maxLength="17"
                            android:hint="Enter VIN"/>












                </LinearLayout>




















            </LinearLayout>
        </ScrollView>






    </LinearLayout>













    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submit_next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:drawableLeft="@drawable/login_icon"
                    android:drawablePadding="@dimen/_3sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:background="@drawable/curve_btnbg" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/logo_inside"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>